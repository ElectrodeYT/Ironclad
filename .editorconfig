# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 79

[{*.adb,*.ads,*.adc,*.gpr*}]
indent_style = space
indent_size = 3

[{*.ld}]
indent_style = space
indent_size = 4

[{*.texi}]
indent_style = space
indent_size = 4

[{Makefile,GNUmakefile*}]
indent_style = tab
indent_size = 4

[{*.toml,*.yml}]
indent_style = space
indent_size = 2
